# SecuAI Environment Configuration
# Copy this file to .env and customize for your environment

# ===== SECURITY SETTINGS =====
# CRITICAL: Change this secret key in production!
SECRET_KEY=development-key-change-immediately-in-production

# Admin credentials - CHANGE THESE IMMEDIATELY!
ADMIN_EMAIL=admin@secuai.local
ADMIN_PASSWORD=ChangeMe123!

# ===== APPLICATION SETTINGS =====
# Debug mode (set to false in production)
DEBUG=true

# Flask environment
FLASK_ENV=development

# Database URL (SQLite by default)
DATABASE_URL=sqlite:///secuai.db

# ===== BLOCKING CONFIGURATION =====
# Enable simulation mode for safety (RECOMMENDED)
SIMULATE_BLOCKS=true

# Allow real blocking (DANGEROUS - use only in isolated environments)
REAL_BLOCKING_ENABLED=false

# Allow blocking private IP ranges (for testing)
ALLOW_PRIVATE_BLOCKING=false

# Block log file location
BLOCK_LOG_FILE=blocked_ips.txt

# ===== ANALYSIS SETTINGS =====
# Confidence threshold for alerts (0.0 to 1.0)
CONFIDENCE_THRESHOLD=0.7

# Enable ML enrichment
ML_ENABLED=false

# ML service endpoint (if using external ML service)
ML_ENDPOINT=

# ===== LOGGING SETTINGS =====
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file location
LOG_FILE=logs/secuai.log

# ===== UPLOAD SETTINGS =====
# Maximum file size for uploads (in bytes)
MAX_CONTENT_LENGTH=16777216

# Upload directory
UPLOAD_FOLDER=uploads

# ===== HONEYPOT SETTINGS =====
# Honeypot feed URL (optional)
HONEYPOT_FEED_URL=

# Honeypot feed update interval (seconds)
HONEYPOT_UPDATE_INTERVAL=3600

# ===== CLOUD DEPLOYMENT SETTINGS =====
# Google Cloud Project ID (for Cloud Run deployment)
# GOOGLE_CLOUD_PROJECT=your-project-id

# Cloud SQL connection name (for production database)
# CLOUD_SQL_CONNECTION_NAME=your-project:region:instance

# Redis connection (for session storage in production)
# REDIS_URL=redis://localhost:6379/0

# ===== SECURITY HEADERS =====
# Enable security headers in production
SECURITY_HEADERS=true

# Content Security Policy
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://code.jquery.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; font-src 'self' https://cdn.jsdelivr.net;"

# ===== RATE LIMITING =====
# Enable rate limiting
RATE_LIMITING=true

# Requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# ===== MONITORING =====
# Enable metrics collection
METRICS_ENABLED=false

# Metrics endpoint (if using external monitoring)
METRICS_ENDPOINT=

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# ===== DEVELOPMENT SETTINGS =====
# Auto-reload on code changes (development only)
FLASK_DEBUG=true

# Show detailed error pages (development only)
PROPAGATE_EXCEPTIONS=true

# ===== PRODUCTION WARNINGS =====
# These settings should be changed in production:
# 1. SECRET_KEY - Generate a strong, unique secret key
# 2. ADMIN_EMAIL and ADMIN_PASSWORD - Use secure admin credentials
# 3. DEBUG=false - Disable debug mode
# 4. SIMULATE_BLOCKS=true - Keep simulation mode enabled unless you have proper network isolation
# 5. REAL_BLOCKING_ENABLED=false - Only enable if you understand the risks
# 6. Use a production database (PostgreSQL) instead of SQLite
# 7. Enable HTTPS with proper SSL certificates
# 8. Set up proper logging and monitoring
# 9. Use a reverse proxy (Nginx) for static files and load balancing
# 10. Implement backup and disaster recovery procedures